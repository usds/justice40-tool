{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017", "es2019"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    // Todo VS: is this really needed?
    "suppressImplicitAnyIndexErrors": true,
  },
  "include": [
    "./src/**/*ts",
    "./src/**/*tsx",
  ],
}
