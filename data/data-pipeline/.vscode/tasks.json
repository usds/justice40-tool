{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test with tox",
      "type": "shell",
      "command": "tox",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Run Black Formatter",
      "type": "shell",
      "command": "black",
      "args": [
        "data_pipeline"
      ]
    },
    {
      "label": "Run Flake8 Style Enforcer",
      "type": "shell",
      "command": "black",
      "args": [
        "data_pipeline"
      ]
    },
    {
      "label": "Run Pylint",
      "type": "shell",
      "command": "pylint",
      "args": [
        "data_pipeline"
      ]
    },
    {
      "label": "Upload tiles to S3",
      "type": "shell",
      "command": "aws",
      "args": [
        "s3",
        "sync",
        "./data_pipeline/data/score/tiles/",
        "s3://justice40-data/data-pipeline/data/score/tiles",
        "--acl public-read",
        "--delete"
      ]
    },
  ]
}
